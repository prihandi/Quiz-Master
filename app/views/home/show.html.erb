<p id="notice"><%= notice %></p>

<div class="well">
  <p>
    <h4>Question :</h4>
  </p>
  <p>
    <%= @question.question.html_safe %>
  </p>
</div>
<%= form_for @question, :url => answer_path do |f| %>
  <div class="field">
    <h4><%= f.label "Your Answer :" %></h4>
    <%= f.text_field :submitted_answer, class: "form-control" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Answer", class: "btn btn-success" %>
  </div>
<% end %>

 <center>
<%= link_to fa_icon("chevron-left", text: " Back"), root_path, class: "btn btn-primary"%>
 </center>