{
  "name": "Quiz Master",
  "description": "A simple question storage app.",
  "website": "http://rubyonrails.org",
  "repository": "https://github.com/prihandi/Quiz-Master",
  "logo": "https://upload.wikimedia.org/wikipedia/commons/c/c3/Ruby_on_Rails_logo.svg",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate && bundle exec rake assets:precompile"
  },
  "env": {
    "RAILS_ENV": "production",
    "RACK_ENV": "production",
    "RAILS_SERVE_STATIC_FILES": "true"
  },
  "addons": ["heroku-postgresql"]
}
